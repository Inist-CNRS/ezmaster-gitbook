{
  "name": "ezmaster-gitbook",
  "version": "1.0.2",
  "description": "Web server to deploy gitbook formatted documentation",
  "dependencies": {
    "gitbook-cli": "^2.3.2",
    "npm-watch": "^0.3.0"
  },
  "devDependencies": {},
  "watch": {
    "buildGitbook": {
      "patterns": [
        "src"
      ],
      "extensions": "*",
      "ignore": "src/_book"
    }
  },
  "scripts": {
    "buildGitbook": "cd src && gitbook install && gitbook build && chown -R $USERID:$GROUPID _book",
    "watch": "npm-watch",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inist-CNRS/ezmaster-gitbook.git"
  },
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "https://github.com/Inist-CNRS/ezmaster-gitbook.git#readme"
}
