{
  "name": "ezmaster-gitbook",
  "version": "1.0.5",
  "description": "Web server to deploy gitbook formatted documentation",
  "dependencies": {
    "gitbook-cli": "^2.3.2",
    "npm-watch": "^0.3.0"
  },
  "devDependencies": {},
  "watch": {
    "build-gitbook": {
      "patterns": [
        "src"
      ],
      "extensions": "*",
      "ignore": "src/_book"
    }
  },
  "scripts": {
    "build-gitbook": "cd src && gitbook install && gitbook build && chown -R $USERID:$GROUPID _book",
    "watch": "npm-watch",
    "insertversion:readme": "sed -i \"s#\\(inistcnrs/ezmaster-gitbook:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" README.md",
    "insertversion:makefile": "sed -i \"s#\\(inistcnrs/ezmaster-gitbook:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" Makefile",
    "insertversion:docker": "sed -i \"s#\\(inistcnrs/ezmaster-gitbook:\\)\\([\\.a-z0-9]\\+\\)#\\1${npm_package_version}#g\" docker-compose*.yml",
    "version": "npm run insertversion:readme && npm run insertversion:makefile && git add README.md Makefile",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Inist-CNRS/ezmaster-gitbook.git"
  },
  "license": "MIT",
  "bugs": {
    "url": ""
  },
  "homepage": "https://github.com/Inist-CNRS/ezmaster-gitbook.git#readme"
}
